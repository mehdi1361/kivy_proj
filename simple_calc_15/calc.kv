<CtlOps@Button>
	background_color: (157/255, 157/255, 157/255, 1)
	size_hint: (.2,.2)
	color: 0,1,0,1
	font_size: 40
	bold: True
	
<CtlVal@Button>
	size_hint: (.2,.2)
	font_size: 40

<MyLayout>
	BoxLayout:
		orientation:"vertical"
		size: root.width, root.height
		
		TextInput:
			multiline:False
			id: calc_input
			text:"0"
			halign: "right"
			font_size: 65
			size_hint:(1, .25)
			
		GridLayout:
			cols: 4
			rows: 5
				
			CtlOps:
				text: "C"
				color: 1,0,0,1
				on_press: root.clear()
					
			CtlOps:
				text: u"\u00AB"
				on_press: root.clear_end()
				
			CtlOps:
				text:"%"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text: "/"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text: "7"
				on_press: root.print_val(self.text)	
				
			CtlVal:
				text: "8"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text:"9"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text:"Ã—"
				on_press: root.print_val("*")
				
			CtlVal:
				text: "6"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text: "5"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text: "4"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text: "-"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text: "3"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text:"2"
				on_press: root.print_val(self.text)
				
			CtlVal:
				text:"1"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text: "+"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text: "+/-"
				
			CtlVal:
				text: "0"
				on_press: root.print_val(self.text)
				
			CtlOps:
				text: "."
				on_press: root.dot()
				
			Button:
				size_hint: (.2, .2)
                font_size: 40
				text:"="
				background_normal:""
				background_color:(0,1,0,1)
				color: 0,0,0,1
				on_press: root.equal()
