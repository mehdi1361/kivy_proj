<MyLayout>
    slide_text: slider_label
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        spacing: 20
        padding: 20

        Label:
            id: slider_label
            text: "slider the Slide"
            font_size: 32

        Slider:
            min: 1
            max: 50
            step: 1
            on_value: root.slide_it(*args)