<MyLayout>
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 20
        padding: 20


        Button:
            text: "hello world"

        RoundButton:
            text: "goodbye world"


<RoundButton@Button>
    background_color: (0,0,0,0)
    pos_hint: {"center_x": 0.5}
    size_hint: (1, .3)

    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255, 1)

        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [18]
