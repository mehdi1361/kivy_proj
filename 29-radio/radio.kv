<MyLayout>
    BoxLayout:
        orientation:'vertical'
        size: root.width, root.height

        Label:
            text:'Select Coffe'
            font_size: 32

        GridLayout:
            cols: 2

            Label:
                text:'mocha'

            CheckBox:
                group: "pizza_toppings"
                on_active: root.checkbox_click(self, self.active, "mocha")
                
            Label:
                text:'americano'

            CheckBox:
                group: "pizza_toppings"
                on_active: root.checkbox_click(self, self.active, "americano")

            Label:
                text:'espersso'

            CheckBox:
                group: "pizza_toppings"
                on_active: root.checkbox_click(self, self.active, "espersso")

        Label:
            id: output_text
            text:''
            font_size: 40